/* pages/person/person.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #FFF;
}

.person_avart {
  height:420rpx;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:space-between;
  padding:70rpx 0 0 0;
  box-sizing:border-box;
  background-size:100% 100%;  
}
.person-control-bar {
  height:70rpx;
  display:flex;
  background-color: gray;
  margin: 10px 0;
  align-items :center;
}

.person-con-title {
  flex-direction:row;
  align-items:center;
  justify-content:space-between;
  padding:20rpx 0;
  box-sizing:border-box;
  width: 50%;
  display: flex;
}

.person-right {
  flex-direction: row-reverse;
}
.right-resev {
  padding-right: 10rpx;
  font-family :'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-size: 30rpx;
  color: blue;
}

.follow_div{
  margin-top:40rpx;
  color:aliceblue;
  font-size:25rpx;
}
.follow_div .me_follow_other{
  text-align: right;
  padding-right:70rpx;
  float:left;
}
.follow_div .other_follow_me{
  text-align: left;
  padding-left: 70rpx;
  float:right;
}



.gradeIconSpan {
    background-image: linear-gradient(49deg,#ff9700,#f76b1c);
    border-radius: 2px;
    height: 16px;
    display: inline-block;
    font-family: MicrosoftYaHei;
    font-size: 14px;
    color: #fff;
    line-height: 16px;
    text-align: center;
    margin-left: 5px;
	padding:3px 5px;
}
